{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "/Users/salieflewis/dao-utils",
    "paths": {
      // Paths unique to dao-utils package
      "@auction/*": ["packages/dao-utils/src/components/auction/*"],
      "@authentication/*": ["packages/dao-utils/src/components/authentication/*"],
      "@proposal/*": ["packages/dao-utils/src/components/proposal/*"],
      "@hooks/*": ["packages/dao-utils/src/hooks/*"],
      "@context/*": ["packages/dao-utils/src/context/*"],
      "@lib/*": ["packages/dao-utils/src/lib"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mdx", "**/*.md"],
  "exclude": ["node_modules"]
}
